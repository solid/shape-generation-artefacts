@prefix rdf:  <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh:   <http://www.w3.org/ns/shacl#> .
@prefix xsd:  <http://www.w3.org/2001/XMLSchema#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix terms: <http://purl.org/dc/terms/> .
@prefix flow: <http://www.w3.org/2005/01/wf/flow#> .
@prefix sioc: <http://rdfs.org/sioc/ns#> .
@prefix cms:   <https://solid.github.io/shapes/ChatMessage#> .

# Ontology-level description
<> 
    rdfs:label "Solid Chat Message Shapes" ;
    rdfs:comment "This file defines SHACL validation rules for Solid Chat messages." .

########## Messages

ms:MessageShape a sh:NodeShape ;
    rdfs:label "Message Shape" ;
    rdfs:comment "SHACL NodeShape defining constraints for messages in Solid Chat." ;
    sh:targetObjectsOf flow:message ;
    sh:property
        [ sh:path terms:created ; 
          sh:minCount 1 ; 
          sh:maxCount 1 ;
          sh:datatype xsd:dateTime ;
          rdfs:label "Created Date" ;
          rdfs:comment "The date and time when the message was created." 
        ],
        [ sh:path foaf:maker ;    
          sh:minCount 1 ; 
          sh:maxCount 1 ;
          rdfs:label "Message Author" ;
          rdfs:comment "The agent or person who authored the message." 
        ],
        [ sh:path sioc:content ;  
          sh:datatype xsd:string ; 
          sh:minCount 1 ;
          sh:maxCount 1 ;
          rdfs:label "Message Content" ;
          rdfs:comment "The textual content of the message." 
        ],
        [ sh:path [ sh:inversePath flow:message ] ;
          sh:minCount 1 ; 
          sh:maxCount 1 ;
          rdfs:label "Related Chat" ;
          rdfs:comment "The chat channel or conversation to which this message belongs." 
        ] .

########## Class and Property Annotations

# flow:message property
flow:message a rdf:Property ;
    rdfs:label "Message" ;
    rdfs:comment "Links a chat channel to its messages." .

# foaf:maker property
foaf:maker a rdf:Property ;
    rdfs:label "Maker" ;
    rdfs:comment "The creator or author of a message." .

# terms:created property
terms:created a rdf:Property ;
    rdfs:label "Created Date" ;
    rdfs:comment "The date and time when the resource was created." .

# sioc:content property
sioc:content a rdf:Property ;
    rdfs:label "Content" ;
    rdfs:comment "The textual content of a message or post." .





# ends

