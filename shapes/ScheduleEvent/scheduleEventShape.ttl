@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix dc: <http://purl.org/dc/elements/1.1/> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix cal: <http://www.w3.org/2002/12/cal/ical#> .
@prefix sched: <http://www.w3.org/ns/pim/schedule#> .
@prefix : <#> .

# Source: Schedule event forms (single form / multi-step)

:ScheduleEventShape
    a sh:NodeShape ;
    rdfs:label "Schedule Event Shape"@en ;
    rdfs:comment "SHACL shape representing a scheduled event, including title, location, type, duration, authors, time proposals, and invitees."@en ;
    sh:targetClass cal:Vevent ;

    # Event title
    sh:property [
        sh:path cal:summary ;
        sh:datatype xsd:string ;
        sh:maxCount 1 ;
        rdfs:label "Event Title"@en ;
        rdfs:comment "The title or summary of the event."@en
    ] ;

    # Event location
    sh:property [
        sh:path cal:location ;
        sh:datatype xsd:string ;
        sh:maxCount 1 ;
        rdfs:label "Event Location"@en ;
        rdfs:comment "The location where the event takes place."@en
    ] ;

    # Event type: all day or not
    sh:property [
        sh:path sched:allDay ;
        sh:datatype xsd:boolean ;
        sh:maxCount 1 ;
        rdfs:label "All-day Event"@en ;
        rdfs:comment "Indicates whether the event lasts all day or has a specific time."@en
    ] ;

    # Duration (depends on allDay)
    sh:property [
        sh:path sched:durationInDays ;
        sh:datatype xsd:integer ;
        sh:minCount 1 ;
        rdfs:label "Duration in Days"@en ;
        rdfs:comment "Duration of the event in days for all-day events."@en
