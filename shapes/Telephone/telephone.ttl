@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh:   <http://www.w3.org/ns/shacl#> .
@prefix vcard: <http://www.w3.org/2006/vcard/ns#>.

@prefix ts: <https://solid.github.io/shapes/Telephone#> .


####### phone
# Reference ../data/raw/shacl/SolidOS_contacts_pane_shapes_contacts_shapes_ttl.ttl
ts:TelephoneShape a sh:NodeShape;
  sh:targetObjectsOf vcard:hasTelephone;
  sh:property [
    sh:path vcard:value;
    sh:nodeKind sh:IRI;  
    sh:pattern "^tel:" ;    # starts with tel:
    sh:minCount 1;
    sh:maxCount 1;
  ].


# Reference https://github.com/SolidOS/contacts-pane/blob/main/src/ontology/forms.ttl

ts:TelephoneShape2 a sh:NodeShape;
  sh:targetObjectsOf vcard:hasTelephone;
  sh:property  [ 
    sh:path vcard:TelephoneType ;
    sh:minCount 0 ;
    sh:maxCount 1 ;
    rdfs:label "Phone Type" ;
    rdfs:comment "Type of phone (cell/mobile/home/work)." 
  ],
  [ 
    sh:path vcard:value ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    rdfs:label "Phone Number" ;
    rdfs:comment "The telephone number of the contact." 
  ]
 .


# ends




             