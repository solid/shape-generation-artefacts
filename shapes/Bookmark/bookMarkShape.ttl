@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix bk: <http://www.w3.org/2002/01/bookmark#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix bs: <https://solid.github.io/shapes/Bookmark#> .

# NodeShape for Bookmark
bs:BookmarkShape
    a sh:NodeShape ;
    sh:targetClass bk:Bookmark ;
    rdfs:label "Bookmark"@en ;
    rdfs:comment "A Bookmark node with label, URL, topic, and description"@en ;

    # Label property
    sh:property [
        sh:path rdfs:label ;
        sh:datatype xsd:string ;
        sh:minCount 0 ;
        rdfs:label "Label"@en ;
        sh:name "Label"@en ;
        rdfs:comment "Human-readable name of the bookmark"@en ;
    ] ;

    # URL property
    sh:property [
        sh:path bk:recalls ;
        sh:datatype xsd:anyURI ;
        sh:minCount 0 ;
        rdfs:label "URL"@en ;
        sh:name "URL"@en ;
        rdfs:comment "The URL that the bookmark points to"@en ;
    ] ;

    # Topic property
    sh:property [
        sh:path bk:hasTopic ;
        sh:datatype xsd:string ;
        sh:minCount 0 ;
        rdfs:label "Topic"@en ;
        sh:name "Topic"@en ;
        rdfs:comment "Topic or category of the bookmark"@en ;
    ] ;

    # Description property
    sh:property [
        sh:path rdfs:comment ;
        sh:datatype xsd:string ;
        sh:minCount 0 ;
        rdfs:label "Description"@en ;
        sh:name "Description"@en ;
        rdfs:comment "Optional description of the bookmark"@en ;
    ] .
