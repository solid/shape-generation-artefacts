@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix solid: <http://www.w3.org/ns/solid/terms#> .
@prefix : <#> .

#################################################
# Basic Preferences Shape
#################################################

:BasicPreferencesShape
    a sh:NodeShape ;
    sh:targetSubjectsOf rdf:type ;   # or define a specific target node

    sh:property [
        sh:path rdf:type ;
        sh:class solid:User ;
        sh:minCount 1 ;
    ] .
